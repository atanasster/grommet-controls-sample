    "url-search-params": "^0.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.5.2",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^20.0.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-plugin-transform-imports": "^1.5.0",
