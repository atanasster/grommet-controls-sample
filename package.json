{
  "name": "grommet-controls-sample",
  "version": "0.1.0",
  "main": "src/index.js",
  "description": "sample app using Grommet Controls with Grommet 2.0",
  "homepage": "https://grommet-nextjs.herokuapp.com",
  "bugs": "https://github.com/atanasster/grommet-controls-sample/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/atanasster/grommet-controls-sample.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "webpack-dev-server --mode development --open",
